{
	"name": "roblox-xploit-syntax",
	"displayName": "LuauXploit Syntax",
	"description": "Syntax Highlighting and Language features for Roblox Executors",
	"version": "1.0.0",
	"author": "Bostonstrong567",
	"categories": [
		"Linters",
		"Programming Languages",
		"Snippets"
	],
	"scripts": {
		"compile": "tsc"
	},
	"contributes": {
		"configuration": {
			"properties": {
				"luauxploit.color.mode": {
					"default": "Semantic",
					"enum": [
						"Grammar",
						"Semantic"
					],
					"markdownDescription": "%config.color.mode%",
					"markdownEnumDescriptions": [
						"%config.color.mode.Grammar%",
						"%config.color.mode.Semantic%"
					],
					"scope": "resource",
					"type": "string"
				},
				"luauxploit.completion.callParenthesess": {
					"default": false,
					"markdownDescription": "%config.completion.callParenthesess%",
					"scope": "resource",
					"type": "boolean"
				},
				"luauxploit.completion.displayContext": {
					"default": 0,
					"markdownDescription": "%config.completion.displayContext%",
					"scope": "resource",
					"type": "integer"
				},
				"luauxploit.completion.enable": {
					"default": true,
					"markdownDescription": "%config.completion.enable%",
					"scope": "resource",
					"type": "boolean"
				},
				"luauxploit.completion.keywordSnippet": {
					"default": "Replace",
					"enum": [
						"Disable",
						"Both",
						"Replace"
					],
					"markdownDescription": "%config.completion.keywordSnippet%",
					"markdownEnumDescriptions": [
						"%config.completion.keywordSnippet.Disable%",
						"%config.completion.keywordSnippet.Both%",
						"%config.completion.keywordSnippet.Replace%"
					],
					"scope": "resource",
					"type": "string"
				},
				"luauxploit.completion.showParams": {
					"default": true,
					"markdownDescription": "%config.completion.showParams%",
					"scope": "resource",
					"type": "boolean"
				},
				"luauxploit.completion.workspaceWord": {
					"default": true,
					"markdownDescription": "%config.completion.workspaceWord%",
					"scope": "resource",
					"type": "boolean"
				},
				"luauxploit.develop.debuggerPort": {
					"default": 11412,
					"markdownDescription": "%config.develop.debuggerPort%",
					"scope": "resource",
					"type": "integer"
				},
				"luauxploit.diagnostics.disable": {
					"items": {
						"type": "string"
					},
					"markdownDescription": "%config.diagnostics.disable%",
					"scope": "resource",
					"type": "array"
				},
				"luauxploit.diagnostics.enable": {
					"default": true,
					"markdownDescription": "%config.diagnostics.enable%",
					"scope": "resource",
					"type": "boolean"
				},
				"luauxploit.workspace.library": {
					"items": {
						"type": "string"
					},
					"markdownDescription": "%config.workspace.library%",
					"scope": "resource",
					"type": "array"
				},
				"luauxploit.workspace.ignoreDir": {
					"default": [
						".vscode",
						"**/_Index/**"
					],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%config.workspace.ignoreDir%",
					"scope": "resource",
					"type": "array"
				}
			}
		},
		"languages": [
			{
				"id": "lua",
				"aliases": [
					"LuauXploit"
				],
				"extensions": [
					".lua",
					".luau"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "lua",
				"path": "./syntaxes/lua.tmLanguage.json",
				"scopeName": "source.lua"
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "primitive",
				"description": "primitive types"
			}
		],
		"semanticTokenScopes": [
			{
				"language": "lua",
				"scopes": {
					"variable": [
						"variable.other.lua"
					],
					"type.primitive": [
						"support.type.primitive.lua"
					]
				}
			}
		]
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"icon": "images/logo.png",
	"keywords": [
		"Luau",
		"IntelliSense",
		"Roblox",
		"Executor"
	],
	"license": "MIT",
	"main": "./client/out/extension",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/YOUR_REPO_HERE/LuauXploit-Syntax.git"
	},
	"bugs": {
		"url": "https://github.com/YOUR_REPO_HERE/LuauXploit-Syntax/issues"
	},
	"homepage": "https://github.com/YOUR_REPO_HERE/LuauXploit-Syntax#readme",
	"devDependencies": {
		"typescript": "^5.6.3"
	}
}
